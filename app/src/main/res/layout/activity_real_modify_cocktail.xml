<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Real_modify_cocktail"
    android:orientation="vertical">

    <EditText
        android:id="@+id/rmd_cocktailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="칵테일의 이름을 입력해주세요."/>

    <EditText
        android:id="@+id/rmd_cockSimpleExplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="칵테일에 대한 간단한 설명을 적어주세요."/>

    <EditText
        android:id="@+id/rmd_techniques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="칵테일에 대한 기법을 적어주세요."/>

    <EditText
        android:id="@+id/rmd_glassName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사용해야하는 칵테일의 잔에 대해 적어주세요."/>

    <EditText
        android:id="@+id/rmd_garnish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="가니쉬에 대해서 적어주세요."/>

    <EditText
        android:id="@+id/rmd_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="칵테일 레시피를 적어주세요."/>

    <Button
        android:id="@+id/buttonModify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정하기"
        android:layout_margin="10dp"
        android:layout_gravity="end"/>
</LinearLayout>