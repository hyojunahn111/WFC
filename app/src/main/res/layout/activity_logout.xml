<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/gomainim2"
            android:background="@drawable/gomain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            />


        <Button
            android:id="@+id/allmenubt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menubt_im"
            android:layout_weight="1"
            />

    </LinearLayout>


    <Button
        android:id="@+id/allcockbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모든 칵테일 보기"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:orientation="vertical">

        <Button
            android:id="@+id/cocknewaddbt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="칵테일 등록하기"
            />
        <Button
            android:id="@+id/hihihi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나는 새로운 버튼"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입문자를 위한 칵테일 추천 영상"
            android:textSize="20dp"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <WebView
                    android:id="@+id/webView1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"/>

                <WebView
                    android:id="@+id/webView2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                   />

                <WebView
                    android:id="@+id/webView3"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"/>


            </LinearLayout>

        </HorizontalScrollView>



        </LinearLayout>

    </LinearLayout>



